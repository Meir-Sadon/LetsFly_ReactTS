{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "jsx": "react",
    "strictNullChecks": false,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "${workspaceFolder}/src",

    //Microsoft Guide.
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "index.tsx"
  ]
}


